    #pageNav {
        font: 12px/24px Tahoma;
        height: 50px;
        margin: 25px auto 0;
        text-align: center;
        width: 500px;
    }

        #pageNav ul {
            list-style-type: none;
            overflow: hidden;
        }

            #pageNav ul li {
