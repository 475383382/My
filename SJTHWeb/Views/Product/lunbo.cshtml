
@{
    ViewBag.Title = "lunbo";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}
<script src="~/Scripts/My97DatePicker/WdatePicker.js"></script>
<script>
   
    $("#lb").addClass("active");
    $("#lbt").addClass("active-menu");
    function updates(id) {
        if (confirm("确认删除！"))
        {
            $.ajax({
                type: "post",
                url: "/Product/uplunbo",
                data: { id: id },
                success: function (data) {
                    if (data == "1") {
                        alert("删除成功！");
                        location.href = '@Url.Action("lunbo", "Product")';
                    }
                }
            });
        }
    }
</script>
<div class="header">
    <h3 class="page-header">
        轮播图 <small>The news added</small>
    </h3>
    <ol class="breadcrumb">
        <li><a href="#">轮播图</a></li>
        <li class="active">轮播图列表</li>
    </ol>

</div>
<div id="page-inner">
    <div class="row">
      
        <div class="col-md-12">
            <!-- Advanced Tables -->
            <div class="panel panel-default">
                <div class="panel-heading">
                    轮播图
                    <a href="@Url.Action("addlunbo", "Product")" class="btn btn-default"> + 轮播图添加</a>
                </div>
                <div class="panel-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                            <thead>
                                <tr>
                                    <th>操作状态</th>
                                    <th>图片类型</th>
                                    <th>图片名称</th>
                                    <th>html页面链接</th>
                                    <th>图片</th>
                                    <th>发布日期</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model != null)
                                {
                                    foreach (var item in Model)
                                    {
                                        <tr class="gradeA">
                                            <td style="width:200px"><a href="@Url.Action("addlunbo", "Product", new { id = @item.id })" style="width:80px" class="btn btn-default">编辑</a> <input style="width:80px" class="btn btn-default" onclick="updates(@item.id)" value="删除" /></td>
                                            @if (@item.type == 1)
                                            {
                                                <td>电脑轮播</td>
                                            }
                                            else
                                            {
                                                <td>手机轮播</td>
                                            }
                                            <td>@item.name</td>
                                            <td>@item.htmlurl</td>
                                            <td><img src="@item.imgurl" width="100px;" height="100px;" /></td>
                                            <td>@item.datatimes</td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>

            </div>
            <!--End Advanced Tables -->

        </div>
    </div>

</div>



