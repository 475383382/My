<script>
    $(function () {
        var t = $(".zc_newlist p").text().length;
        $(".zc_newlist p").each(function () {
            var t = $(this).text();
            var tt = $(this).text().length;
            if (tt > 150) {
                t = t.substring(0, 150);
                $(this).html(t + "...");

            } else {
                $(this).html(t);
            }
        })

    })
</script>
